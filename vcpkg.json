{
    "name": "openblack",
    "version-string": "0.0.1-dev",
    "dependencies": [
        "sdl2",
        "imgui",
        "spdlog",
        "glm",
        "stb",
        "entt",
        "cxxopts",
        "openal-soft",
        "drlibs",
        {
            "name": "bgfx",
            "default-features": false,
            "features": [ "tools", "multithreaded" ],
            "host": true,
            "$reason": "Don't want to build shaderc on non-native platforms so they are built on the host config."
        },
        {
            "name": "bgfx",
            "default-features": false,
            "platform": "emscripten"
        },
        {
            "name": "bgfx",
            "default-features": false,
            "features": [ "multithreaded" ],
            "platform": "!emscripten"
        },
        "bullet3",
        "minizip",
        "gtest"
    ]
}
